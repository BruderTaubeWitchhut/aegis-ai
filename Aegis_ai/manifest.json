{
  "manifest_version": 3,
  "name": "Aegis.ai",
  "version": "1.0",
  "description": "AI-powered protection against scams, fraud, and phishing on job postings, emails, and financial websites.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Aegis.ai - Scam Protection"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}